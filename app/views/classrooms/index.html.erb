<div id="new-class-form">
<%= form_with scope: :classroom, url: classrooms_path do |f| %>
  <%= f.text_field :subject_name, id: "subject_name", placeholder: "Add a new class" %>
  <%= f.submit :Add %>
<% end %>
</div>
<br>
<table class="table table-hover">
  <tr>
    <th>Class</th>
    <th>Actions</th>
  </tr>
  <% @classrooms.each do |classroom| %>
    <tr>
      <td><%= classroom.subject_name %></td>
      <td><%= link_to "Edit Class Name", edit_classroom_path(classroom) %>
      <td><%= link_to "Delete Class", classroom_path(classroom),
          method: :delete,
          data: { confirm: "Are you sure? You will be deleting this class and all its students." } %>
      </td>
    </tr>
  <% end %>
</table>